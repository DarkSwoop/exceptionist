<h2>Latest Exceptions</h2>

<div class="span-22 prepend-1 append-1">
  <% for uber_exc in @uber_exceptions %>
    <div class="span-4 append-bottom quiet">
      Last: <%= format_time(uber_exc.last_occurred_at) %><br />
      First: <%= format_time(uber_exc.first_occurred_at) %>
    </div>
    <div class="span-16">
      <h6><a href="/exceptions/<%= uber_exc.id %>"><%= uber_exc.title %></a></h6>
      <%= truncate(uber_exc.url, 80) %>
    </div>
    <div class="span-2 last centered">
      <span class="occurrence_count"># <%= uber_exc.occurrences_count %></span>
    </div>

    <hr />
  <% end %>
</div>

<div class="span-3 prepend-1 append-17">
  <% if @page > 1 %>
  <strong><a href="/?page=<%= @page - 1 %>">&laquo; previous page</a></strong>
  <% end %>&nbsp;
</div>
<div class="span-2 append-1 last">
  <% unless @uber_exceptions.empty? %>
  <strong><a href="/?page=<%= @page + 1 %>">next page &raquo;</a></strong>
  <% end %>
</div>

<hr class="space" />
