<% for uber_exc in exceptions %>
  <div class="span-4 append-bottom quiet">
    Last: <%= format_time(uber_exc.last_occurred_at) %><br />
    First: <%= format_time(uber_exc.first_occurred_at) %>
  </div>
  <div class="span-16">
    <h6><a href="/exceptions/<%= uber_exc.id %>"><%= uber_exc.title %></a></h6>
    <%= truncate(uber_exc.url, 80) %>
  </div>
  <div class="span-2 last centered">
    <span class="occurrence_count"># <%= uber_exc.occurrences_count %></span>
  </div>
  <hr />
<% end %>
